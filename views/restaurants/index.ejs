<% layout("layouts/boilerplate") -%> <% if(restaurants.length < 1) {%>
<div class="row">
  <div class="col-md-10"><h1>Looks Like there's nothing here yet!</h1></div>
  <div class="col-md-2 text-right mt-2">
    <a class="btn btn-primary" href="/restaurants/new">add restaurant</a>
  </div>
</div>
<% }else{ %>
<div class="row">
  <div class="col-md-10"><h1>Restaurants Page!</h1></div>
  <div class="col-md-2 text-right mt-2">
    <% if (currentUser){%>
    <a class="btn btn-primary" href="/restaurants/new">add restaurant</a>
    <% } %>
  </div>
</div>

<%for (let restaurant of restaurants) {%>
<div class="card" mb-3>
  <div class="row">
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%=restaurant.name %></h5>
        <p class="card-text"><%= restaurant.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= restaurant.location %></small>
        </p>
        <a class="btn btn-primary" href="/restaurants/<%=restaurant._id%>"
          >View <%= restaurant.name %>
        </a>
      </div>
    </div>
  </div>
</div>
<div class="mb-4"></div>
<% } %> <% } %>
