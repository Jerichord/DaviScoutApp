<% layout("layouts/boilerplate") -%>

<div class="row">
  <h1 class="text-center">Edit Restaurant</h1>
  <div class="col-6 offset-3">
    <form
      action="/restaurants/<%= restaurant._id%>?_method=PUT"
      method="post"
      novalidate
      class="needs-validation"
    >
      <div class="form-group mb-3">
        <label for="name">Restaurant Name</label>
        <input
          type="text"
          class="form-control"
          id="name"
          name="restaurant[name]"
          value="<%= restaurant.name %>"
          required
        />
        <div class="valid-feedback">Looks Good</div>
        <div class="invalid-feedback">Please Provide Name</div>
      </div>
      <div class="form-group mb-3">
        <label for="name">Restaurant Location</label>
        <input
          type="text"
          class="form-control"
          id="location"
          name="restaurant[location]"
          value="<%= restaurant.location %>"
          required
        />
        <div class="valid-feedback">Looks Good</div>
        <div class="invalid-feedback">Please Provide a Loaction</div>
      </div>
      <div class="form-group mb-3">
        <label for="name">Restaurant Description</label>
        <input
          type="text"
          class="form-control"
          id="description"
          name="restaurant[description]"
          value="<%= restaurant.description %>"
          required
        />
        <div class="valid-feedback">Looks Good</div>
        <div class="invalid-feedback">Please Provide a Description</div>
      </div>
      <button>Update Restaurant</button>
    </form>
    <a href="/restaurants/<%= restaurant._id %> ">Back to Restaurants</a>
  </div>
</div>
